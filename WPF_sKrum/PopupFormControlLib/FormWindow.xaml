<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:PageTransitions="clr-namespace:PageTransitions;assembly=WpfPageTransitions" xmlns:local="clr-namespace:PopupFormControlLib" xmlns:GenericControlLib="clr-namespace:GenericControlLib;assembly=GenericControlLib" x:Class="PopupFormControlLib.FormWindow"
        Title="FormWindow" Height="600" Width="800" WindowStyle="None" WindowState="Maximized" FontFamily="Open Sans" FontSize="18.667" Background="{DynamicResource BackgroundBrush}">
    <Window.Resources>
    	<SolidColorBrush x:Key="BackgroundBrush" Color="#E2E2E2" />
    	<SolidColorBrush x:Key="KinectOnBarBrush" Color="#242424" />
    	<SolidColorBrush x:Key="KinectOffBarBrush" Color="#555555" />
    	<SolidColorBrush x:Key="MustPriorityBrush" Color="#242424" />
    	<SolidColorBrush x:Key="ShouldPriorityBrush" Color="#646464" />
    	<SolidColorBrush x:Key="CouldPriorityBrush" Color="#959595" />
    	<SolidColorBrush x:Key="WouldPriorityBrush" Color="#DADADA" />
    	<SolidColorBrush x:Key="Gray1Brush" Color="#E2E2E2" />
    	<SolidColorBrush x:Key="Gray2Brush" Color="#DADADA" />
    	<SolidColorBrush x:Key="Gray3Brush" Color="#C3C3C3" />
    	<SolidColorBrush x:Key="Gray4Brush" Color="#959595" />
    	<SolidColorBrush x:Key="Gray5Brush" Color="#646464" />
    	<SolidColorBrush x:Key="Gray6Brush" Color="#555555" />
    	<SolidColorBrush x:Key="Gray7Brush" Color="#242424" />
        <Style x:Key="HoverZoomStyle" TargetType="{x:Type Image}">
        	<Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        	<Setter Property="RenderTransform">
        		<Setter.Value>
        			<TransformGroup>
        				<ScaleTransform/>
        				<SkewTransform/>
        				<RotateTransform/>
        				<TranslateTransform/>
        			</TransformGroup>
        		</Setter.Value>
        	</Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="90*"/>
		</Grid.RowDefinitions>
        
		<PageTransitions:PageTransition x:Name="PageTransitionLayer" Grid.Row="1"/>
		<Grid x:Name="UpperBar" Margin="0" Grid.Row="0" Background="{DynamicResource KinectOffBarBrush}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="30*" />
				<ColumnDefinition Width="40*" />
				<ColumnDefinition Width="8*" />
				<ColumnDefinition Width="8*" />
				<ColumnDefinition Width="8*" />
			</Grid.ColumnDefinitions>
			<Image HorizontalAlignment="Center" MouseLeftButtonDown="Close_MouseLeftButtonDown" VerticalAlignment="Center" Grid.Column="4" Source="Images/cruz.png" Margin="5" Style="{StaticResource HoverZoomStyle}" Panel.ZIndex="1"/>
			<Label x:Name="FieldNameLabel" Content="Nome do Projecto" VerticalContentAlignment="Center" Foreground="White" FontSize="32" Padding="40,5,5,5"/>
		</Grid>
		<Grid x:Name="FormContent" Grid.RowSpan="2" Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="2*"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid x:Name="LeftButtonPlaceholder" Grid.Row="1" Margin="70,30,20,40">
				<GenericControlLib:ButtonControl ButtonText="ANTERIOR"/>
			</Grid>
			<Grid x:Name="RightButtonPlaceholder" Grid.Row="1" Grid.Column="1" Margin="20,30,70,40">
				<GenericControlLib:ButtonControl ButtonText="SEGUINTE"/>
			</Grid>
			<local:TextBoxPage Grid.ColumnSpan="2" Margin="0"/>
		</Grid>
	</Grid>
</Window>
