<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="PopupFormControlLib.TextBoxPage"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="3*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBox TextWrapping="Wrap" Grid.Row="1" FontFamily="Open Sans" TextAlignment="Center" VerticalAlignment="Center" Padding="0,20" Margin="30,0" Grid.Column="1" Foreground="{DynamicResource Gray7Brush}" BorderBrush="{x:Null}" Background="{DynamicResource Gray3Brush}" FontSize="48"/>
	</Grid>
</UserControl>