<UserControl
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:GenericControlLib="clr-namespace:GenericControlLib;assembly=GenericControlLib" x:Class="WPFApplication.MainPage"
      mc:Ignorable="d"
      d:DesignWidth="1024" d:DesignHeight="768" Background="{DynamicResource BackgroundBrush}">
	<UserControl.Resources>
		<Style TargetType="{x:Type GenericControlLib:ButtonControl}">
			<Setter Property="VerticalAlignment" Value="Stretch" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="Margin" Value="20" />
		</Style>
	</UserControl.Resources>
	<Grid Margin="40,80">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<GenericControlLib:ButtonControl ButtonFontSize="40" ButtonText="BACKLOG" />
		<GenericControlLib:ButtonControl ButtonFontSize="40" Grid.Column="2" ButtonText="SPRINT BACKLOG"/>
		<GenericControlLib:ButtonControl ButtonFontSize="40" Grid.Row="1" ButtonText="TASKBOARD"/>
		<GenericControlLib:ButtonControl ButtonFontSize="40" Grid.Row="1" Grid.Column="2" ButtonText="REUNIÕES"/>
	</Grid>
</UserControl>